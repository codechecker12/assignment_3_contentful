---
  pagination:
    data: posts
    size: 3  
    alias: blogPage
  permalink: "blog/page/{{ pagination.pageNumber }}/index.html"
  
  tags: "blog"
  layout: "layout/default.liquid"
  
  
---
  <h1>Blog Posts</h1>
  <div class="blog-card">
    {% for blogPage in pagination.items %}
      <div class="post-card">
        <h2>{{ blogPage.title }}</h2>
       
        {% if blogPage.image %}
          <img src="{{ blogPage.image }}" alt="{{ blogPage.title }}">
        {% else %}
          <p>No image available</p>
        {% endif %}
        <p>{{ blogPage.content | slice: 0, 150 }}</p>
        <a href="/fblog/{{ blogPage.slug }}/index.html" class="read-more-btn">Read More</a>
      </div>
    {% endfor %}
  </div>
  
  <div class="pagination">
  {% if pagination.href.previous %}
    <a href="{{ pagination.href.previous }}">Previous</a>
  {% else %}
    <span>Previous</span> 
  {% endif %}
  |
  {% if pagination.href.next %}
    <a href="{{ pagination.href.next }}">Next</a>
  {% else %}
    <span>Next</span> 
  {% endif %}
</div>